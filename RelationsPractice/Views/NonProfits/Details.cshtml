@{
  Layout = "_Layout";
}

@using RelationsPractice.Models;
@model RelationsPractice.Models.NonProfit;

<h2>NonProfit Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Title): @Html.DisplayFor(model => model.Title)</h3>

<ul>
@if (@Model.BoardMembers.Count == 0)
{
  <p>no members found</p>
}

@foreach (BoardMember boardMember in @Model.BoardMembers)
{
  <li>Name: @boardMember.Name</li>
}
</ul>

<p>@Html.ActionLink("Back to categories", "Index")</p>
<p>@Html.ActionLink("Edit Non Profit", "Edit", new { id = Model.NonProfitId })</p>
<p>@Html.ActionLink("Delete Non Profit", "Delete", new { id = Model.NonProfitId })</p>