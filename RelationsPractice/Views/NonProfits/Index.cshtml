  
@{
  Layout = "_Layout";
}

@using RelationsPractice.Models;
@model List<RelationsPractice.Models.BoardMember>;

<h1>BoardMembers</h1>

@if (@Model.Count == 0)
{
  <h3>No boardMembers have been added yet!</h3>
} 

@foreach (BoardMember boardMember in Model)
{
  <li>@Html.ActionLink($"{boardMember.Name}", "Details", new { id = boardMember.BoardMemberId }) | @boardMember.NonProfit.Title</li>
}

<p>@Html.ActionLink("Add new boardMember", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>